#BRIGHTNESS
{XF86MonBrightnessUp,XF86MonBrightnessDown}
	{brightnessctl -q -e2 -n10 s 5%+ && pkill -RTMIN+2 dwmblocks,brightnessctl -q -e2 -n10 s 5%- && pkill -RTMIN+2 dwmblocks}

#VOLUME
{XF86AudioRaiseVolume,XF86AudioLowerVolume,XF86AudioMute}
	{pamixer -i 2 && pkill -RTMIN+5 dwmblocks,pamixer -d 2 && pkill -RTMIN+5 dwmblocks,pamixer -t && pkill -RTMIN+5 dwmblocks}
#{XF86AudioRaiseVolume,XF86AudioLowerVolume,XF86AudioMute,XF86AudioMicMute}
	#{wpctl set-volume -l 1 @DEFAULT_AUDIO_SINK@ 2%+ && pkill -RTMIN+5 dwmblocks,\
	# wpctl set-volume @DEFAULT_AUDIO_SINK@ 2%- && pkill -RTMIN+5 dwmblocks,\
	# wpctl set-mute @DEFAULT_AUDIO_SINK@ toggle && pkill -RTMIN+5 dwmblocks,\
	# wpctl set-mute @DEFAULT_AUDIO_SOURCE@ toggle && pkill -RTMIN+5 dwmblocks}

#BROWSER
super + w
	$BROWSER

#DEFAULT FILE MANAGER
super + e
	$TERMINAL -e lf

#EMOJIS
super + alt + e
	dmenu_emojis.sh

#SET BACKGROUND
super + alt + w
	dmenu_wallpaper.sh

#CLIPBOARD
super + alt + v
	clipmenu

#TERMINAL
super + Return
	$TERMINAL

#SHUTDOWN
super + alt + x
	dmenu_shutdown.sh

#LOCKSCREEN
super + control + l
	slock

#SCREEN SHOT
{super + Print,super + shift + s}
	{flameshot screen,flameshot gui}
